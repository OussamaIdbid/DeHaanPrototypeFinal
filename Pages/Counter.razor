@page "/counter"
@using DeHaanCash.Data


<h1>Counter</h1>

<p>Current count: @currentCount</p>
<p>@product</p>

<MatButton @onclick="test">test</MatButton>
<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    int currentCount = 9;


    void IncrementCount()
    {
        currentCount++;

    }

    Product p = new Product();  
    string product;
    void test()
    {
    
    p.Name = "test";
    p.Price = 3.50;

    product = p.Name + "" + p.Price;
    }

    

}
